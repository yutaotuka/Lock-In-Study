<!-- app/views/answers/_form.html.erb -->
<%= turbo_frame_tag "question_area" do %>
  <%= form_with model: @answer, url: answers_path, method: :post, data: { turbo_frame: "question_area" } do |form| %>
    <%= form.label :first_answer_choice, "あなたは今何をしていますか？" %><br>
    <%= form.radio_button :first_answer_choice, "study", name: 'answer[first_answer_choice]', class: "form-radio-btn" %>
    <%= form.label :first_answer_choice_study, "勉強", class: "form-radio" %>
    <%= form.radio_button :first_answer_choice, "break", name: 'answer[first_answer_choice]', class: "form-radio-btn" %>
    <%= form.label :first_answer_choice_break, "休憩", class: "form-radio" %>
    <%= form.radio_button :first_answer_choice, "other", name: 'answer[first_answer_choice]', class: "form-radio-btn" %>
    <%= form.label :first_answer_choice_other, "他の事", class: "form-radio" %>
    <%= form.submit "次へ", class: "form-submit" %>
  <% end %>
<% end %>
